{
  "name": "brave-talk-extension",
  "version": "0.0.1",
  "description": "Brave Talk extension",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose --runInBand",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --devtool inline-source-map --watch",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brave/brave-talk-gcalendar-extension.git"
  },
  "bugs": {
    "url": "https://github.com/brave/brave-talk-gcalendar-extension/issues"
  },
  "homepage": "https://github.com/brave/brave-talk-gcalendar-extension#readme",
  "devDependencies": {
    "@types/chrome": "0.0.263",
    "@types/jest": "29.5.2",
    "copy-webpack-plugin": "11.0.0",
    "dotenv": "16.3.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-puppeteer": "9.0.2",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "puppeteer-core": "^23.1.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.5.2",
    "typescript": "5.1.3",
    "webpack": "^5.95.0",
    "webpack-cli": "5.1.4"
  },
  "overrides": {
    "semver": "7.5.3",
    "optionator": "0.9.3"
  },
  "lint-staged": {
    "src/*.ts": "prettier --write"
  }
}
