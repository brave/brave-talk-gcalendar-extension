{
  "name": "brave-talk-extension",
  "version": "3.0.0",
  "description": "Brave Talk extension",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest --verbose --runInBand",
    "build": "webpack --mode production",
    "zip": "node scripts/create-zip.js",
    "watch": "webpack --mode development --devtool inline-source-map --watch",
    "format": "prettier --write src/ scripts/",
    "format:check": "prettier --check src/ scripts/",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brave/brave-talk-gcalendar-extension.git"
  },
  "bugs": {
    "url": "https://github.com/brave/brave-talk-gcalendar-extension/issues"
  },
  "homepage": "https://github.com/brave/brave-talk-gcalendar-extension#readme",
  "devDependencies": {
    "@types/chrome": "0.1.1",
    "@types/jest": "29.5.14",
    "archiver": "7.0.1",
    "copy-webpack-plugin": "11.0.0",
    "dotenv": "16.6.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-puppeteer": "9.0.2",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "puppeteer-core": "23.11.1",
    "ts-jest": "29.4.0",
    "ts-loader": "9.5.2",
    "typescript": "5.8.3",
    "webpack": "5.101.3",
    "webpack-cli": "5.1.4"
  },
  "overrides": {
    "semver": "7.7.2",
    "optionator": "0.9.4"
  },
  "lint-staged": {
    "src/*.ts": "prettier --write"
  }
}
